<!--pages/hotel/search/index.wxml-->
<t-navbar fixed="true" t-class-placeholder="t-navbar-placeholder" t-class-content="t-navbar-content">
  <view slot="left">
    <t-image
      t-class="custom-image"
      src="/images/logo.png"
      aria-label="导航栏图片"
    />
  </view>
</t-navbar>
<view class="search">
  <t-search placeholder="请输入酒店名称~" shape="round" bind:change="onChangeValue" bind:clear="onClearValue"/>
</view>
<view class="block" wx:if="{{!resultList || resultList.length > 0}}">
  <view wx:for="{{resultList}}" wx:key="index">
    <t-cell
      title="{{item.name}}" 
      description="点击查看详情"
      align="top"
      image="{{item.images[0]}}"
      hover
      bordered="{{true}}"
      bind:click="handleItemClick"
      data-item="{{item}}"
    />
  </view>
</view>
<view class="demo-section__content" wx:else>
    <t-result theme="warning" title="暂未推出此酒店" />
</view>
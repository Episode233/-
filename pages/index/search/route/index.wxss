.custom-image {
  height: 45px;
  width: 123px;
}

.img {
  width: 100%;
  height: 100%;
}

.block--bottom {
  width: 100vw;
  height: 300px;
}

/* 弹出层整体内容样式 */
.popup-content {
  padding: 20px; /* 内边距，保证内容不会贴边 */
  background-color: #f8f8f8; /* 背景颜色 */
  border-radius: 10px; /* 弧形边角 */
}

/* 每一行日程的样式 */
.popup-item {
  margin-bottom: 15px; /* 每一项之间的间距 */
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

/* 天数的样式 */
.day-number {
  font-size: 18px; /* 字体大小 */
  font-weight: bold; /* 粗体 */
  color: #333; /* 深色字体 */
  margin-right: 10px; /* 与日程内容的间距 */
}

/* 每天日程详情的样式 */
.day-detail {
  font-size: 16px; /* 字体稍小一点 */
  color: #555; /* 灰色字体 */
  line-height: 1.5; /* 行高，增加可读性 */
}
